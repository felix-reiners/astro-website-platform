---
import Navigation from '../components/ui/Navigation.astro';
import Footer from '../components/ui/Footer.astro';
import { languages, defaultLang, type Language } from '@/config/i18n';
import { getAlternateLanguageLinks } from '@/utils/i18n';

export interface Props {
  title: string;
  description?: string;
  lang?: string;
  businessType?: 'app-marketing' | 'consulting' | 'book';
  siteName?: string;
  logoUrl?: string;
  showNav?: boolean;
  showFooter?: boolean;
  currentLang?: Language;
}

const {
  title,
  description = 'Professional website generated with our multi-template platform',
  lang = 'en',
  businessType = 'app-marketing',
  siteName = 'Your Brand',
  logoUrl,
  showNav = true,
  showFooter = true,
  currentLang = defaultLang
} = Astro.props;

// Get alternate language links for SEO
const alternateLinks = getAlternateLanguageLinks(Astro.url.pathname);
---

<!DOCTYPE html>
<html lang={lang} data-business-type={businessType}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL('/og-image.jpg', Astro.url)} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL('/og-image.jpg', Astro.url)} />

    <!-- Canonical URL -->
    <link rel="canonical" href={Astro.url} />

    <!-- Alternate Language Links (hreflang) -->
    {alternateLinks.map(({ lang, url }) => (
      <link rel="alternate" hreflang={lang} href={new URL(url, Astro.site || Astro.url)} />
    ))}
    <link rel="alternate" hreflang="x-default" href={new URL(alternateLinks[0].url, Astro.site || Astro.url)} />

    <!-- Security Meta Tags -->
    <meta http-equiv="X-Content-Type-Options" content="nosniff" />
    <meta http-equiv="X-Frame-Options" content="DENY" />
    <meta http-equiv="X-XSS-Protection" content="1; mode=block" />
    <meta name="referrer" content="strict-origin-when-cross-origin" />

    <link rel="stylesheet" href="/src/styles/global.css" />
  </head>
  <body class="min-h-screen bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100 transition-colors duration-200 flex flex-col">
    {showNav && (
      <Navigation
        businessType={businessType}
        siteName={siteName}
        logoUrl={logoUrl}
        currentLang={currentLang}
      />
    )}

    <main class="flex-grow">
      <slot />
    </main>

    {showFooter && (
      <Footer
        businessType={businessType}
        siteName={siteName}
      />
    )}
  </body>
</html>

<style is:global>
  /* Import the generated theme variables */
  @import '/src/styles/theme.css';

  /* Base styles for both business types */
  /* The color variables are defined in theme.css which is generated per site */
  :root {
    /* Default fallback colors if theme.css is not loaded */
    --color-primary: #2563eb;
    --color-primary-dark: #1d4ed8;
    --color-secondary: #0ea5e9;
    --color-accent: #10b981;
  }

  /* App Marketing Theme - Override with specific colors if needed */
  [data-business-type="app-marketing"] {
    --font-style: 'modern';
  }

  /* Consulting Theme - Override with specific colors if needed */
  [data-business-type="consulting"] {
    --font-style: 'professional';
  }

  /* Book Theme - Override with specific colors if needed */
  [data-business-type="book"] {
    --font-style: 'elegant';
    --color-primary: #9333ea;
    --color-primary-dark: #7e22ce;
  }

  /* Smooth scrolling */
  html {
    scroll-behavior: smooth;
  }

  /* Focus styles for accessibility */
  *:focus-visible {
    outline: 2px solid var(--color-primary);
    outline-offset: 2px;
  }
</style>