---
import Button from './Button.astro';

export interface Props {
  title: string;
  subtitle?: string;
  ctaText?: string;
  ctaHref?: string;
  secondaryCtaText?: string;
  secondaryCtaHref?: string;
  businessType?: 'app-marketing' | 'consulting';
  backgroundImage?: string;
  appStoreUrl?: string;
  playStoreUrl?: string;
}

const { 
  title, 
  subtitle,
  ctaText,
  ctaHref,
  secondaryCtaText,
  secondaryCtaHref,
  businessType = 'app-marketing',
  backgroundImage,
  appStoreUrl,
  playStoreUrl
} = Astro.props;

const isApp = businessType === 'app-marketing';
---

<section 
  class={`relative min-h-screen flex items-center justify-center overflow-hidden ${
    isApp ? 'bg-gradient-to-br from-blue-50 via-white to-sky-50' : 'bg-gradient-to-b from-gray-50 to-white'
  }`}
  aria-labelledby="hero-heading"
>
  {backgroundImage && (
    <div class="absolute inset-0 z-0">
      <img 
        src={backgroundImage} 
        alt="" 
        role="presentation"
        class="w-full h-full object-cover opacity-10"
      />
    </div>
  )}
  
  <div class="container mx-auto px-4 py-16 md:py-24 relative z-10">
    <div class={`max-w-4xl ${isApp ? 'mx-auto text-center' : 'text-left'}`}>
      {/* App Icon or Logo placeholder */}
      {isApp && (
        <div class="w-24 h-24 md:w-32 md:h-32 mx-auto mb-8 bg-gradient-to-br from-blue-500 to-sky-400 rounded-3xl shadow-xl flex items-center justify-center">
          <span class="text-4xl md:text-5xl text-white">ðŸ“±</span>
        </div>
      )}
      
      {/* Main Heading */}
      <h1 
        id="hero-heading"
        class={`text-4xl md:text-5xl lg:text-6xl font-bold mb-6 ${
          isApp 
            ? 'bg-gradient-to-r from-blue-600 to-sky-500 bg-clip-text text-transparent' 
            : 'text-gray-900'
        }`}
      >
        {title}
      </h1>
      
      {/* Subtitle */}
      {subtitle && (
        <p class={`text-xl md:text-2xl mb-8 ${
          isApp ? 'text-gray-600 max-w-3xl mx-auto' : 'text-gray-700 max-w-2xl'
        }`}>
          {subtitle}
        </p>
      )}
      
      {/* CTAs */}
      <div class={`flex flex-col sm:flex-row gap-4 ${
        isApp ? 'justify-center items-center' : 'justify-start'
      }`}>
        {/* App Store Buttons for App Marketing */}
        {isApp && (appStoreUrl || playStoreUrl) ? (
          <>
            {appStoreUrl && (
              <Button 
                href={appStoreUrl}
                variant="primary"
                size="lg"
                businessContext="app"
                aria-label="Download on the App Store"
              >
                <svg class="w-5 h-5 mr-2" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
                </svg>
                App Store
              </Button>
            )}
            {playStoreUrl && (
              <Button 
                href={playStoreUrl}
                variant="primary"
                size="lg"
                businessContext="app"
                aria-label="Get it on Google Play"
              >
                <svg class="w-5 h-5 mr-2" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M3,20.5V3.5C3,2.91 3.34,2.39 3.84,2.15L13.69,12L3.84,21.85C3.34,21.6 3,21.09 3,20.5M16.81,15.12L6.05,21.34L14.54,12.85L16.81,15.12M20.16,10.81C20.5,11.08 20.75,11.5 20.75,12C20.75,12.5 20.53,12.9 20.18,13.18L17.89,14.5L15.39,12L17.89,9.5L20.16,10.81M6.05,2.66L16.81,8.88L14.54,11.15L6.05,2.66Z"/>
                </svg>
                Google Play
              </Button>
            )}
          </>
        ) : (
          <>
            {ctaText && ctaHref && (
              <Button 
                href={ctaHref}
                variant="primary"
                size="lg"
                businessContext={isApp ? 'app' : 'consulting'}
              >
                {ctaText}
              </Button>
            )}
            {secondaryCtaText && secondaryCtaHref && (
              <Button 
                href={secondaryCtaHref}
                variant="outline"
                size="lg"
                businessContext={isApp ? 'app' : 'consulting'}
              >
                {secondaryCtaText}
              </Button>
            )}
          </>
        )}
      </div>
      
      {/* Trust Indicators for Consulting */}
      {!isApp && (
        <div class="mt-12 pt-8 border-t border-gray-200">
          <p class="text-sm text-gray-600 mb-4">Trusted by leading companies</p>
          <div class="flex flex-wrap gap-8 items-center">
            {[1, 2, 3, 4].map((i) => (
              <div class="w-24 h-12 bg-gray-200 rounded animate-pulse" aria-hidden="true"></div>
            ))}
          </div>
        </div>
      )}
      
      {/* App Features Preview for App Marketing */}
      {isApp && (
        <div class="mt-12 grid grid-cols-3 gap-4 max-w-md mx-auto">
          {['Fast', 'Secure', 'Easy'].map((feature) => (
            <div class="text-center">
              <div class="w-12 h-12 mx-auto mb-2 bg-blue-100 rounded-xl flex items-center justify-center">
                <span class="text-blue-600">âœ“</span>
              </div>
              <span class="text-sm text-gray-600">{feature}</span>
            </div>
          ))}
        </div>
      )}
    </div>
  </div>
</section>