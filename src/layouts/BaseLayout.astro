---
export interface Props {
  title: string;
  description?: string;
  lang?: string;
  businessType?: 'app-marketing' | 'consulting';
}

const { 
  title, 
  description = 'Professional website generated with our multi-template platform',
  lang = 'en',
  businessType = 'app-marketing'
} = Astro.props;
---

<!DOCTYPE html>
<html lang={lang} data-business-type={businessType}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="stylesheet" href="/src/styles/global.css" />
  </head>
  <body class="min-h-screen bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100 transition-colors duration-200">
    <slot />
  </body>
</html>

<style is:global>
  /* Import the generated theme variables */
  @import '/src/styles/theme.css';

  /* Base styles for both business types */
  /* The color variables are defined in theme.css which is generated per site */
  :root {
    /* Default fallback colors if theme.css is not loaded */
    --color-primary: #2563eb;
    --color-primary-dark: #1d4ed8;
    --color-secondary: #0ea5e9;
    --color-accent: #10b981;
  }

  /* App Marketing Theme - Override with specific colors if needed */
  [data-business-type="app-marketing"] {
    --font-style: 'modern';
  }

  /* Consulting Theme - Override with specific colors if needed */
  [data-business-type="consulting"] {
    --font-style: 'professional';
  }

  /* Smooth scrolling */
  html {
    scroll-behavior: smooth;
  }

  /* Focus styles for accessibility */
  *:focus-visible {
    outline: 2px solid var(--color-primary);
    outline-offset: 2px;
  }
</style>