---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/ui/Hero.astro';
import Button from '../components/ui/Button.astro';
---

<BaseLayout 
  title="Multi-Template Website Generation Platform"
  description="Generate professional websites for mobile apps and consulting businesses with AI-powered content, multi-language support, and 95+ Lighthouse scores."
  businessType="app-marketing"
>
  <main>
    <Hero
      title="Build Professional Websites in Minutes"
      subtitle="AI-powered platform for generating high-performance, accessible websites for mobile apps and consulting businesses. 6 languages, 95+ Lighthouse scores, WCAG 2.1 AA compliant."
      ctaText="Start Generating"
      ctaHref="#demo"
      secondaryCtaText="View Documentation"
      secondaryCtaHref="/docs"
    />
    
    <section class="py-16 px-4 bg-gray-50">
      <div class="container mx-auto max-w-6xl">
        <h2 class="text-3xl font-bold text-center mb-12">Platform Features</h2>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          <div class="bg-white p-6 rounded-lg shadow-md">
            <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mb-4">
              <span class="text-2xl">üöÄ</span>
            </div>
            <h3 class="text-xl font-semibold mb-2">Dual Templates</h3>
            <p class="text-gray-600">App marketing and consulting templates with business-aware components</p>
          </div>
          
          <div class="bg-white p-6 rounded-lg shadow-md">
            <div class="w-12 h-12 bg-emerald-100 rounded-lg flex items-center justify-center mb-4">
              <span class="text-2xl">üåç</span>
            </div>
            <h3 class="text-xl font-semibold mb-2">6 Languages</h3>
            <p class="text-gray-600">EN, DE, FR, ES, IT, PT with cultural adaptation</p>
          </div>
          
          <div class="bg-white p-6 rounded-lg shadow-md">
            <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center mb-4">
              <span class="text-2xl">‚ö°</span>
            </div>
            <h3 class="text-xl font-semibold mb-2">95+ Lighthouse</h3>
            <p class="text-gray-600">Performance, accessibility, best practices, and SEO</p>
          </div>
          
          <div class="bg-white p-6 rounded-lg shadow-md">
            <div class="w-12 h-12 bg-yellow-100 rounded-lg flex items-center justify-center mb-4">
              <span class="text-2xl">ü§ñ</span>
            </div>
            <h3 class="text-xl font-semibold mb-2">AI Content</h3>
            <p class="text-gray-600">Claude AI integration for expert-quality content generation</p>
          </div>
          
          <div class="bg-white p-6 rounded-lg shadow-md">
            <div class="w-12 h-12 bg-pink-100 rounded-lg flex items-center justify-center mb-4">
              <span class="text-2xl">‚ôø</span>
            </div>
            <h3 class="text-xl font-semibold mb-2">WCAG 2.1 AA</h3>
            <p class="text-gray-600">Full accessibility compliance for all users</p>
          </div>
          
          <div class="bg-white p-6 rounded-lg shadow-md">
            <div class="w-12 h-12 bg-cyan-100 rounded-lg flex items-center justify-center mb-4">
              <span class="text-2xl">üîí</span>
            </div>
            <h3 class="text-xl font-semibold mb-2">Privacy-First</h3>
            <p class="text-gray-600">Cookieless analytics, GDPR compliant by design</p>
          </div>
        </div>
      </div>
    </section>
    
    <section class="py-16 px-4" id="demo">
      <div class="container mx-auto max-w-4xl text-center">
        <h2 class="text-3xl font-bold mb-8">Try It Now</h2>
        <p class="text-xl text-gray-600 mb-8">Generate your first website in minutes</p>
        
        <div class="bg-gray-50 p-8 rounded-lg">
          <p class="text-gray-700 mb-4">Run the following command to generate a site:</p>
          <code class="block bg-gray-900 text-green-400 p-4 rounded font-mono text-sm">
            npm run generate examples/weather-app-config.json
          </code>
        </div>
        
        <div class="mt-8 flex gap-4 justify-center">
          <Button href="/docs" variant="primary" size="lg">
            Read Documentation
          </Button>
          <Button href="https://github.com/yourusername/astro-website-platform" variant="outline" size="lg">
            View on GitHub
          </Button>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>
