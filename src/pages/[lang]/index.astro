---
import { languages, type Language } from '@/config/i18n';
import { useTranslations } from '@/utils/i18n';
import BaseLayout from '@/layouts/BaseLayout.astro';
import Hero from '@/components/ui/Hero.astro';
import Card from '@/components/ui/Card.astro';

export async function getStaticPaths() {
  return Object.keys(languages).map((lang) => ({
    params: { lang }
  }));
}

const { lang } = Astro.params as { lang: Language };
const t = useTranslations(lang);

// This is a generic homepage - in generated sites, this will be customized
const businessType = 'app-marketing';
const siteName = 'Your App';
---

<BaseLayout
  title={siteName}
  description={t('meta.description', { appName: siteName })}
  lang={lang}
  businessType={businessType}
  siteName={siteName}
  currentLang={lang}
>
  <!-- Hero Section -->
  <Hero
    title={t('hero.title', { appName: siteName })}
    subtitle={t('hero.subtitle')}
    ctaText={t('hero.cta')}
    ctaLink="#features"
    businessContext={businessType}
  />

  <!-- Features Section -->
  <section id="features" class="py-16 px-4 bg-gray-50 dark:bg-gray-800">
    <div class="max-w-7xl mx-auto">
      <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-12 text-center">
        {t('features.title')}
      </h2>
      <div class="grid md:grid-cols-3 gap-8">
        <Card
          icon="âš¡"
          title={t('features.fast.title')}
          description={t('features.fast.description')}
          variant="feature"
          businessContext={businessType}
        />
        <Card
          icon="ðŸŽ¨"
          title={t('features.beautiful.title')}
          description={t('features.beautiful.description')}
          variant="feature"
          businessContext={businessType}
        />
        <Card
          icon="ðŸ”’"
          title={t('features.secure.title')}
          description={t('features.secure.description')}
          variant="feature"
          businessContext={businessType}
        />
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 px-4 bg-gradient-to-br from-blue-600 to-blue-700 text-white">
    <div class="max-w-4xl mx-auto text-center">
      <h2 class="text-3xl font-bold mb-6">
        {t('cta.title')}
      </h2>
      <p class="text-xl mb-8 opacity-90">
        {t('cta.description')}
      </p>
      <a
        href={`/${lang}/contact`}
        class="inline-block bg-white text-blue-600 font-semibold px-8 py-3 rounded-lg hover:bg-blue-50 transition-colors"
      >
        {t('cta.button')}
      </a>
    </div>
  </section>
</BaseLayout>