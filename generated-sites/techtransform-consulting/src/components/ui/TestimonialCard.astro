---
export interface Props {
  quote: string;
  author: string;
  title?: string;
  company?: string;
  avatar?: string;
  rating?: number;
  businessType?: 'app-marketing' | 'consulting';
  class?: string;
}

const { 
  quote,
  author,
  title,
  company,
  avatar,
  rating = 5,
  businessType = 'app-marketing',
  class: className = '',
  ...rest 
} = Astro.props;

const displayTitle = title || (businessType === 'app-marketing' ? 'App User' : 'Client');
---

<div class={`bg-white rounded-xl shadow-lg p-8 border-l-4 transition-all hover:shadow-xl ${
  businessType === 'app-marketing' 
    ? 'border-l-blue-500 hover:border-l-blue-600' 
    : 'border-l-emerald-500 hover:border-l-emerald-600'
} ${className}`} {...rest}>
  
  {rating && (
    <div class="flex items-center mb-4">
      {Array.from({ length: 5 }, (_, i) => (
        <svg 
          key={i}
          class={`w-5 h-5 ${
            i < rating 
              ? businessType === 'app-marketing' ? 'text-yellow-400' : 'text-yellow-500'
              : 'text-gray-300'
          }`}
          fill="currentColor" 
          viewBox="0 0 20 20"
        >
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
        </svg>
      ))}
    </div>
  )}

  <blockquote class="text-gray-700 text-lg leading-relaxed mb-6 italic">
    "{quote}"
  </blockquote>

  <div class="flex items-center">
    {avatar ? (
      <img 
        src={avatar} 
        alt={`${author} avatar`} 
        class="w-12 h-12 rounded-full object-cover mr-4 border-2 border-gray-200"
      />
    ) : (
      <div class={`w-12 h-12 rounded-full mr-4 flex items-center justify-center text-white font-semibold ${
        businessType === 'app-marketing' ? 'bg-blue-500' : 'bg-slate-600'
      }`}>
        {author.charAt(0).toUpperCase()}
      </div>
    )}
    
    <div>
      <div class={`font-semibold ${
        businessType === 'app-marketing' ? 'text-blue-900' : 'text-slate-900'
      }`}>
        {author}
      </div>
      
      <div class="text-gray-600 text-sm">
        {displayTitle}
        {company && (
          <>
            {businessType === 'consulting' ? ' at ' : ', '}
            <span class="font-medium">{company}</span>
          </>
        )}
      </div>
    </div>
  </div>

  {businessType === 'consulting' && (
    <div class="mt-4 pt-4 border-t border-gray-100">
      <div class="text-sm text-gray-500">
        <span class="font-medium">Project:</span> Digital transformation initiative
      </div>
    </div>
  )}
</div>