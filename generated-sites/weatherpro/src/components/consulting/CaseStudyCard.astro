---
export interface Props {
  title: string;
  client: string;
  industry?: string;
  challenge: string;
  solution: string;
  results: string[];
  image?: string;
  href?: string;
  class?: string;
}

const { 
  title,
  client,
  industry,
  challenge,
  solution,
  results,
  image,
  href,
  class: className = '',
  ...rest 
} = Astro.props;
---

<div class={`bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-all ${className}`} {...rest}>
  {image && (
    <div class="h-48 bg-gradient-to-br from-slate-600 to-slate-800 relative overflow-hidden">
      <img 
        src={image} 
        alt={`${title} case study`}
        class="w-full h-full object-cover opacity-80"
      />
      <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent"></div>
      <div class="absolute bottom-4 left-6 text-white">
        <h3 class="text-xl font-bold mb-1">{title}</h3>
        <p class="text-slate-200">{client}</p>
        {industry && (
          <span class="inline-block bg-white/20 text-white text-xs px-2 py-1 rounded mt-2">
            {industry}
          </span>
        )}
      </div>
    </div>
  )}

  <div class="p-8">
    {!image && (
      <div class="mb-6">
        <h3 class="text-2xl font-bold text-slate-900 mb-2">{title}</h3>
        <div class="flex items-center gap-4">
          <span class="text-lg text-slate-700 font-semibold">{client}</span>
          {industry && (
            <span class="inline-block bg-slate-100 text-slate-700 text-sm px-3 py-1 rounded-full">
              {industry}
            </span>
          )}
        </div>
      </div>
    )}

    <div class="space-y-6">
      <div>
        <h4 class="font-semibold text-slate-900 mb-2 flex items-center">
          <svg class="w-5 h-5 text-red-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.99-.833-2.75 0L4.064 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
          </svg>
          Challenge
        </h4>
        <p class="text-gray-600 leading-relaxed">{challenge}</p>
      </div>

      <div>
        <h4 class="font-semibold text-slate-900 mb-2 flex items-center">
          <svg class="w-5 h-5 text-blue-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
          </svg>
          Solution
        </h4>
        <p class="text-gray-600 leading-relaxed">{solution}</p>
      </div>

      <div>
        <h4 class="font-semibold text-slate-900 mb-3 flex items-center">
          <svg class="w-5 h-5 text-emerald-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
          </svg>
          Results
        </h4>
        <ul class="space-y-2">
          {results.map((result, index) => (
            <li key={index} class="flex items-start">
              <svg class="w-5 h-5 text-emerald-500 mt-0.5 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              <span class="text-gray-700 font-medium">{result}</span>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <div class="mt-8 pt-6 border-t border-gray-200">
      {href ? (
        <a 
          href={href}
          class="inline-flex items-center text-slate-700 hover:text-slate-900 font-semibold transition-colors"
        >
          Read Full Case Study
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      ) : (
        <button class="inline-flex items-center text-slate-700 hover:text-slate-900 font-semibold transition-colors">
          Discuss Similar Project
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
          </svg>
        </button>
      )}
    </div>
  </div>
</div>