---

<BaseLayout 
  title="TechTransform - Digital Transformation Experts"
  description="We help enterprises navigate digital transformation with expertise in cloud migration, DevOps, and AI implementation."
  businessType="consulting"
>
  <main>
    <!-- Hero Section -->
    <Hero
      title="Accelerate Your Digital Transformation"
      subtitle="We help enterprises navigate complex digital transformations with proven expertise in cloud migration, DevOps automation, and AI implementation. Transform your business with strategies that deliver measurable results."
      ctaText="Schedule Consultation"
      ctaHref="#contact"
      secondaryCtaText="View Case Studies"
      secondaryCtaHref="#case-studies"
      businessType="consulting"
    />

    <!-- Services Section -->
    <ServicesGrid
      services={services}
      title="Our Expertise"
      subtitle="Comprehensive solutions designed to accelerate your digital transformation journey"
    />

    <!-- Case Studies Section -->
    <section id="case-studies" class="py-16">
      <div class="container mx-auto px-4 max-w-7xl">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-slate-900 mb-4">
            Proven Results
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            See how we've helped organizations transform their operations and achieve exceptional business outcomes
          </p>
        </div>
        
        <div class="grid gap-8 lg:grid-cols-2 xl:grid-cols-3">
          {caseStudies.map((study, index) => (
            <CaseStudyCard
              key={index}
              title={study.title}
              client={study.client}
              industry={study.industry}
              challenge={study.challenge}
              solution={study.solution}
              results={study.results}
            />
          ))}
        </div>
      </div>
    </section>

    <!-- Team Section -->
    <section class="py-16 bg-gray-50">
      <div class="container mx-auto px-4 max-w-6xl">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-slate-900 mb-4">
            Meet Our Team
          </h2>
          <p class="text-xl text-gray-600">
            Industry experts with decades of combined experience
          </p>
        </div>
        
        <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
          {teamMembers.map((member, index) => (
            <div key={index} class="bg-white rounded-xl shadow-lg p-8 text-center">
              <div class="w-24 h-24 bg-slate-200 rounded-full mx-auto mb-6 flex items-center justify-center">
                <span class="text-2xl font-bold text-slate-600">
                  {member.name.split(' ').map(n => n[0]).join('')}
                </span>
              </div>
              <h3 class="text-xl font-bold text-slate-900 mb-2">{member.name}</h3>
              <p class="text-blue-600 font-semibold mb-3">{member.role}</p>
              <p class="text-gray-600 mb-4">{member.bio}</p>
              <a 
                href={member.linkedin}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center text-slate-700 hover:text-slate-900 transition-colors"
              >
                <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
