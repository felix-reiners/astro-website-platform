---
import BaseLayout from '../layouts/BaseLayout.astro';
import ContactForm from '../components/ui/ContactForm.astro';
import Card from '../components/ui/Card.astro';

// This is a generic contact page that adapts to business type
const businessType = 'app-marketing'; // Will be replaced during generation
const siteName = 'Your App'; // Will be replaced during generation
const contactEmail = 'hello@yourapp.com'; // Will be replaced
---

<BaseLayout
  title={`Contact ${siteName}`}
  description={`Get in touch with the ${siteName} team.`}
  businessType={businessType}
  siteName={siteName}
>
  <!-- Hero Section -->
  <section class={`py-16 px-4 bg-gradient-to-br ${businessType === 'book' ? 'from-purple-50 to-white dark:from-purple-900/20 dark:to-gray-900' : 'from-blue-50 to-white dark:from-blue-900/20 dark:to-gray-900'}`}>
    <div class="max-w-4xl mx-auto text-center">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-6">
        {businessType === 'app-marketing' ? 'Get in Touch' : businessType === 'consulting' ? 'Contact Us' : 'Get in Touch'}
      </h1>
      <p class="text-xl text-gray-600 dark:text-gray-300 leading-relaxed">
        {businessType === 'app-marketing'
          ? 'Have questions or feedback? We\'re here to help!'
          : businessType === 'consulting'
          ? 'Let\'s discuss how we can help achieve your business goals.'
          : 'Have questions about the book? We\'d love to hear from you!'
        }
      </p>
    </div>
  </section>

  <section class="py-16 px-4">
    <div class="max-w-6xl mx-auto">
      <div class="grid lg:grid-cols-3 gap-12">

        <!-- Contact Information -->
        <div class="lg:col-span-1 space-y-8">
          <div>
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-8">
              {businessType === 'app-marketing' ? 'Contact Info' : businessType === 'consulting' ? 'Get In Touch' : 'Contact Info'}
            </h2>

            <!-- Contact Methods -->
            <div class="space-y-6">
              <div class="flex items-start gap-4">
                <div class={`flex-shrink-0 w-12 h-12 ${businessType === 'book' ? 'bg-purple-100 dark:bg-purple-900/30' : 'bg-blue-100 dark:bg-blue-900/30'} rounded-lg flex items-center justify-center`}>
                  <svg class={`w-6 h-6 ${businessType === 'book' ? 'text-purple-600 dark:text-purple-400' : 'text-blue-600 dark:text-blue-400'}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900 mb-1">Email</h3>
                  <a href={`mailto:${contactEmail}`} class="text-blue-600 hover:text-blue-700">
                    {contactEmail}
                  </a>
                </div>
              </div>

              {businessType === 'consulting' && (
                <>
                  <div class="flex items-start gap-4">
                    <div class="flex-shrink-0 w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
                      <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                      </svg>
                    </div>
                    <div>
                      <h3 class="font-semibold text-gray-900 mb-1">Phone</h3>
                      <a href="tel:+1234567890" class="text-blue-600 hover:text-blue-700">
                        +1 (234) 567-890
                      </a>
                    </div>
                  </div>

                  <div class="flex items-start gap-4">
                    <div class="flex-shrink-0 w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
                      <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                      </svg>
                    </div>
                    <div>
                      <h3 class="font-semibold text-gray-900 mb-1">Office</h3>
                      <p class="text-gray-600">
                        123 Business St<br/>
                        Suite 100<br/>
                        City, State 12345
                      </p>
                    </div>
                  </div>
                </>
              )}
            </div>
          </div>

          <!-- Response Time -->
          <Card
            icon="⏱️"
            title={businessType === 'app-marketing' ? 'Quick Response' : 'Response Time'}
            description={businessType === 'app-marketing'
              ? 'We typically respond within 24 hours.'
              : 'We respond to all inquiries within 1 business day.'
            }
            variant="feature"
            businessContext={businessType}
          />
        </div>

        <!-- Contact Form -->
        <div class="lg:col-span-2">
          <ContactForm
            businessType={businessType}
            variant={businessType === 'consulting' ? 'detailed' : 'simple'}
          />
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  {businessType === 'app-marketing' && (
    <section class="py-16 px-4 bg-gray-50 dark:bg-gray-800">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-12 text-center">
          Frequently Asked Questions
        </h2>
        <div class="space-y-6">
          <details class="bg-white dark:bg-gray-700 rounded-lg p-6 shadow-sm">
            <summary class="font-semibold text-gray-900 dark:text-white cursor-pointer">
              How do I download the app?
            </summary>
            <p class="mt-4 text-gray-600 dark:text-gray-300">
              You can download our app from the App Store or Google Play Store. Just search for
              "{siteName}" or use the download links on our homepage.
            </p>
          </details>

          <details class="bg-white dark:bg-gray-700 rounded-lg p-6 shadow-sm">
            <summary class="font-semibold text-gray-900 dark:text-white cursor-pointer">
              Is there a free version?
            </summary>
            <p class="mt-4 text-gray-600 dark:text-gray-300">
              Yes! We offer a free tier with core features. You can upgrade to premium anytime for
              additional features.
            </p>
          </details>

          <details class="bg-white dark:bg-gray-700 rounded-lg p-6 shadow-sm">
            <summary class="font-semibold text-gray-900 dark:text-white cursor-pointer">
              How can I report a bug?
            </summary>
            <p class="mt-4 text-gray-600 dark:text-gray-300">
              Use the contact form above or email us directly. Please include details about the
              issue and your device information.
            </p>
          </details>
        </div>
      </div>
    </section>
  )}

  {businessType === 'consulting' && (
    <section class="py-16 px-4 bg-slate-50 dark:bg-slate-800">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-6">
          Prefer to Schedule a Call?
        </h2>
        <p class="text-lg text-gray-600 dark:text-gray-300 mb-8">
          Book a complimentary 30-minute discovery call to discuss your needs.
        </p>
        <a
          href="#"
          class="inline-block bg-slate-800 dark:bg-slate-700 text-white font-semibold px-8 py-3 rounded-lg hover:bg-slate-900 dark:hover:bg-slate-600 transition-colors"
        >
          Schedule Discovery Call
        </a>
      </div>
    </section>
  )}

  {businessType === 'book' && (
    <section class="py-16 px-4 bg-purple-50 dark:bg-gray-800">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-12 text-center">
          Reader Questions
        </h2>
        <div class="space-y-6">
          <details class="bg-white dark:bg-gray-700 rounded-lg p-6 shadow-sm">
            <summary class="font-semibold text-gray-900 dark:text-white cursor-pointer">
              Where can I purchase the book?
            </summary>
            <p class="mt-4 text-gray-600 dark:text-gray-300">
              The book is available at major retailers including Amazon, Barnes & Noble, and your local bookstore.
              Both print and ebook formats are available.
            </p>
          </details>

          <details class="bg-white dark:bg-gray-700 rounded-lg p-6 shadow-sm">
            <summary class="font-semibold text-gray-900 dark:text-white cursor-pointer">
              Are you available for book club discussions?
            </summary>
            <p class="mt-4 text-gray-600 dark:text-gray-300">
              Yes! I love connecting with readers. Contact me with your book club details and I'll do my best
              to join your discussion via video call.
            </p>
          </details>

          <details class="bg-white dark:bg-gray-700 rounded-lg p-6 shadow-sm">
            <summary class="font-semibold text-gray-900 dark:text-white cursor-pointer">
              Will there be a sequel?
            </summary>
            <p class="mt-4 text-gray-600 dark:text-gray-300">
              I'm currently working on the next book! Sign up for the newsletter to be the first to know
              about release dates and exclusive previews.
            </p>
          </details>
        </div>
      </div>
    </section>
  )}
</BaseLayout>