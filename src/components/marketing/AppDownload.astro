---
export interface Props {
  appStore?: {
    ios?: string;
    android?: string;
    web?: string;
  };
  title?: string;
  subtitle?: string;
  showQR?: boolean;
  class?: string;
}

const { 
  appStore = {},
  title = 'Download Our App',
  subtitle = 'Get started today on your favorite platform',
  showQR = false,
  class: className = '',
  ...rest 
} = Astro.props;

const { ios, android, web } = appStore;
---

<div class={`bg-gradient-to-br from-blue-600 to-blue-800 rounded-2xl p-8 md:p-12 text-white ${className}`} {...rest}>
  <div class="text-center mb-8">
    <h3 class="text-2xl md:text-3xl font-bold mb-4">
      {title}
    </h3>
    <p class="text-blue-100 text-lg max-w-2xl mx-auto">
      {subtitle}
    </p>
  </div>

  <div class="flex flex-wrap justify-center gap-4 mb-8">
    {ios && (
      <a 
        href={ios}
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center bg-black hover:bg-gray-800 text-white px-6 py-3 rounded-lg transition-colors"
      >
        <svg class="w-8 h-8 mr-3" viewBox="0 0 24 24" fill="currentColor">
          <path d="M18.71 19.5C17.88 20.74 17 21.95 15.66 21.97C14.32 22 13.89 21.18 12.37 21.18C10.84 21.18 10.37 21.95 9.1 22C7.79 22.05 6.8 20.68 5.96 19.47C4.25 17 2.94 12.45 4.7 9.39C5.57 7.87 7.13 6.91 8.82 6.88C10.1 6.86 11.32 7.75 12.11 7.75C12.89 7.75 14.37 6.68 15.92 6.84C16.57 6.87 18.39 7.1 19.56 8.82C19.47 8.88 17.39 10.1 17.41 12.63C17.44 15.65 20.06 16.66 20.09 16.67C20.06 16.74 19.67 18.11 18.71 19.5ZM13 3.5C13.73 2.67 14.94 2.04 15.94 2C16.07 3.17 15.6 4.35 14.9 5.19C14.21 6.04 13.07 6.7 11.95 6.61C11.8 5.46 12.36 4.26 13 3.5Z"/>
        </svg>
        <div>
          <div class="text-xs">Download on the</div>
          <div class="text-lg font-semibold">App Store</div>
        </div>
      </a>
    )}

    {android && (
      <a 
        href={android}
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center bg-black hover:bg-gray-800 text-white px-6 py-3 rounded-lg transition-colors"
      >
        <svg class="w-8 h-8 mr-3" viewBox="0 0 24 24" fill="currentColor">
          <path d="M17.523 15.3414c-.5511 0-.9993-.4486-.9993-.9997s.4482-.9993.9993-.9993c.5511 0 .9993.4482.9993.9993.0001.5511-.4482.9997-.9993.9997zm-11.046 0c-.5511 0-.9993-.4486-.9993-.9997s.4482-.9993.9993-.9993c.5511 0 .9993.4482.9993.9993 0 .5511-.4482.9997-.9993.9997zm11.4045-6.02l1.9973-3.4592a.416.416 0 00-.1518-.5972.416.416 0 00-.5972.1518l-2.0223 3.503c-.8744-.3394-1.8589-.5295-2.8895-.5295s-2.0151.1901-2.8895.5295L8.3747 5.4097a.4161.4161 0 00-.5972-.1518.4161.4161 0 00-.1518.5972l1.9973 3.4592c-2.8441 1.2407-4.8233 4.0219-4.8233 7.2069h16.4026c0-3.185-1.9792-5.9662-4.8233-7.2069z"/>
        </svg>
        <div>
          <div class="text-xs">Get it on</div>
          <div class="text-lg font-semibold">Google Play</div>
        </div>
      </a>
    )}

    {web && (
      <a 
        href={web}
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center bg-white hover:bg-gray-100 text-blue-600 px-6 py-3 rounded-lg transition-colors"
      >
        <svg class="w-8 h-8 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/>
        </svg>
        <div>
          <div class="text-xs">Open in</div>
          <div class="text-lg font-semibold">Web Browser</div>
        </div>
      </a>
    )}
  </div>

  {showQR && (
    <div class="text-center">
      <div class="inline-block bg-white p-4 rounded-lg">
        <div class="w-32 h-32 bg-gray-200 rounded flex items-center justify-center">
          <span class="text-gray-500 text-sm">QR Code</span>
        </div>
      </div>
      <p class="text-blue-100 text-sm mt-2">Scan to download</p>
    </div>
  )}

  <div class="text-center mt-6">
    <p class="text-blue-200 text-sm">
      Join over 100,000+ users worldwide
    </p>
  </div>
</div>