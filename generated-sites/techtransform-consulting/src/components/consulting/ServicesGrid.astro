---
import Card from '../ui/Card.astro';

export interface Service {
  icon: string;
  title: string;
  description: string;
  features: string[];
  href?: string;
}

export interface Props {
  services: Service[];
  title?: string;
  subtitle?: string;
  columns?: 2 | 3;
  class?: string;
}

const { 
  services,
  title = 'Our Services',
  subtitle = 'Comprehensive solutions to drive your business forward',
  columns = 3,
  class: className = '',
  ...rest 
} = Astro.props;

const gridClasses = {
  2: 'grid-cols-1 lg:grid-cols-2',
  3: 'grid-cols-1 md:grid-cols-2 lg:grid-cols-3'
};
---

<section class={`py-16 bg-gray-50 ${className}`} {...rest}>
  <div class="container mx-auto px-4 max-w-7xl">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-slate-900 mb-4">
        {title}
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        {subtitle}
      </p>
    </div>

    <div class={`grid gap-8 ${gridClasses[columns]}`}>
      {services.map((service, index) => (
        <div key={index} class="bg-white rounded-xl shadow-lg p-8 hover:shadow-xl transition-all border-l-4 border-l-slate-700">
          <div class="flex items-center justify-center w-16 h-16 bg-slate-100 rounded-xl mb-6">
            <span class="text-3xl">{service.icon}</span>
          </div>
          
          <h3 class="text-2xl font-bold text-slate-900 mb-4">
            {service.title}
          </h3>
          
          <p class="text-gray-600 mb-6 leading-relaxed">
            {service.description}
          </p>

          {service.features && service.features.length > 0 && (
            <ul class="space-y-3 mb-6">
              {service.features.map((feature, featureIndex) => (
                <li key={featureIndex} class="flex items-start">
                  <svg class="w-5 h-5 text-emerald-500 mt-0.5 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                  <span class="text-gray-700">{feature}</span>
                </li>
              ))}
            </ul>
          )}

          {service.href ? (
            <a 
              href={service.href}
              class="inline-flex items-center text-slate-700 hover:text-slate-900 font-semibold transition-colors"
            >
              Learn More
              <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
              </svg>
            </a>
          ) : (
            <button class="inline-flex items-center text-slate-700 hover:text-slate-900 font-semibold transition-colors">
              Request Consultation
              <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
              </svg>
            </button>
          )}
        </div>
      ))}
    </div>

    <div class="text-center mt-12">
      <p class="text-gray-600 mb-6">
        Need a custom solution? We work with you to create tailored strategies for your unique challenges.
      </p>
      <a 
        href="#contact" 
        class="inline-flex items-center bg-slate-800 hover:bg-slate-900 text-white px-8 py-4 rounded-lg font-semibold transition-colors"
      >
        Schedule a Free Consultation
        <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3a1 1 0 011-1h6a1 1 0 011 1v4h3a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9a2 2 0 012-2h3z"></path>
        </svg>
      </a>
    </div>
  </div>
</section>